<h1 class="display-1 mt-5">Create a Doc 👩🏻‍⚕️</h1>

<%= simple_form_for(@doctor) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :title, collection: ["Prof", "Dr"] %>
    <div data-controller="form">
    <p class="grey mb-3 mt-3" >Experience: <span data-form-target="years">0<span> years</p>
    <%= f.input :experience, as: :range, selected: 2, input_html: { min: 2, max: 20, data: {action: "click->form#updateYears"}}, label: false%>
    </div>
    <%= f.input :emoji_avatar, collection: ["👩🏻", "👨🏻", "👩🏾‍🦱", "🧑🏽‍🦱", "👨🏿‍🦱", "🧑🏻‍🦰", "🧔‍♀️", "👱🏻‍♀️"], label: "Select Emoji" %>
    <%= f.input :speciality, collection: ["Dermatologist", "Pneumologist", "Cardiolgist", "Dentist", "GP"] %>
    <%= f.submit class:"btn btn-success mt-4", style: "border-radius:12px;"%>
<% end %>
