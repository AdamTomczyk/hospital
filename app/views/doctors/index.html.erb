
<div class="d-flex justify-content-between  align-items-center mt-5">
  <h1 class="display-1">Doctor Index</h1>
  <%= link_to "Add a new Doctor +", new_doctor_path, class:"btn btn-success", style:"border-radius:12px;"  %>
</div>


<h1 class="mt-5">Available Doctors <i class="fa-solid fa-check" style="color:#1bd761"></i></h1>

<div class="grid mt-4">
  <% @avaialbe_doctors.each do |doctor| %>
    <div class="doctor-card hvr-grow">
      <div class="d-flex justify-content-start align-items-center">
        <div class="blob" style="background-color: <%= ["#f6d575", "#f4c3c6", "#bea1f6", "#c7d8fd", "#daf6fc"].sample %>">
          <h3><%= doctor.emoji_avatar  %></h3>
        </div>
        <div class="specality-holder">
          <h2 style="margin-left:10px" ><%= doctor.title %>. <%= doctor.last_name %></h2>
          <h6><%= doctor.speciality %></h6>
        </div>

      </div>
      <div class="d-flex justify-content-between align-items-center mt-4">
        <h5>Experience</h5>
        <div>
        <% doctor.experience.times do  %>
            <div class="xp-blobs"></div>
        <% end %>
        </div>
       </div>


      <div data-controller="accordion" class=" mt-3">
        <div>
        <button data-accordion-target="accordion" class="accordion  main-btn">Options +</button>
            <div class="panel">
              <%= link_to "More",  doctor_path(doctor), class:"mt-2", style:"color:white;text-decoration:none"   %>
              <%= link_to doctor.available ? "Make #{doctor.title}. #{doctor.last_name} unavailable" : " #{doctor.title}. #{doctor.last_name} available",   update_available_doctor_path(doctor), class:"mt-2", style:"color:white;text-decoration:none; padding-bottom: 5px;", data:{turbo_method: :patch}   %>
        </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


